<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity"
    android:background="@color/md_light_blue_50"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/closest_testing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:backgroundTint="@color/md_cyan_600"
        android:text="Closest Testing Center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rss_feed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mask_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:backgroundTint="@color/md_cyan_600"
        android:text="Mask Reminders"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/closest_testing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/virus"
        app:layout_constraintBottom_toTopOf="@+id/rss_feed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closest_testing"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/covid"
        app:layout_constraintBottom_toTopOf="@+id/closest_testing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mask_reminder"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/testing"
        app:layout_constraintBottom_toTopOf="@+id/mask_reminder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/rss_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:backgroundTint="@color/md_cyan_600"
        android:text="Latest COVID News"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/cdc"
        app:layout_constraintBottom_toTopOf="@+id/cdc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cdc" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45dp"

        android:layout_height="45dp"
        android:src="@drawable/increase"
        app:layout_constraintBottom_toTopOf="@+id/worldometers"
        app:layout_constraintEnd_toEndOf="@+id/worldometers"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/worldometers"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="COVID Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/md_red_300"
        android:layout_marginLeft="10dp"/>


    <Button
        android:id="@+id/cdc"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="CDC Guidelines"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/md_red_300"
        />


</androidx.constraintlayout.widget.ConstraintLayout>